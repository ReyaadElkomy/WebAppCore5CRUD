@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-between py-3">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Title" />
    </div>

    <div class="col-md-6">
        <div class="d-flex justify-content-between">
            <h3>@Model.Title</h3>
            <span class="">
                <i class="bi-alarm bi-star-fill text-warning"></i>
                <span class="text-muted">
                    @Model.Rate.ToString("0.0")
                </span>
            </span>
        </div>

        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>

        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Model.Genre.Name
        </span>
        <p class="text-justify mt-3">@Model.StoryLine</p>



    </div>
</div>

<a class="btn btn-outline-primary" asp-action="Index"> <i class="bi bi-back"></i> Back To Movies</a>
